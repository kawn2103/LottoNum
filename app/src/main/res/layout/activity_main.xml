<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <NumberPicker
        android:id="@+id/num_picker"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.4"/>

    <Button
        android:id="@+id/add_bt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="번호 추가"
        android:autoSizeTextType="uniform"
        android:lines="1"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/num_picker"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reset_bt"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/reset_bt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="초기화"
        android:autoSizeTextType="uniform"
        android:lines="1"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/add_bt"
        app:layout_constraintBottom_toBottomOf="@id/add_bt"
        app:layout_constraintStart_toEndOf="@id/add_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintVertical_bias="0.1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/add_bt"
        app:layout_constraintBottom_toTopOf="@id/run_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <TextView
            android:id="@+id/num_tv1"
            android:text="1"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/num_tv2"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1"/>

        <TextView
            android:id="@+id/num_tv2"
            android:text="1"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/num_tv1"
            app:layout_constraintEnd_toStartOf="@id/num_tv3"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1"/>

        <TextView
            android:id="@+id/num_tv3"
            android:text="1"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/num_tv2"
            app:layout_constraintEnd_toStartOf="@id/num_tv4"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1"/>

        <TextView
            android:id="@+id/num_tv4"
            android:text="1"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/num_tv3"
            app:layout_constraintEnd_toStartOf="@id/num_tv5"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1"/>

        <TextView
            android:id="@+id/num_tv5"
            android:text="1"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/num_tv4"
            app:layout_constraintEnd_toStartOf="@id/num_tv6"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1"/>

        <TextView
            android:id="@+id/num_tv6"
            android:text="1"
            android:autoSizeTextType="uniform"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/num_tv5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.1"
            app:layout_constraintDimensionRatio="1:1"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/run_bt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="자동 생성"
        android:autoSizeTextType="uniform"
        android:lines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintVertical_bias="0.98"/>



</androidx.constraintlayout.widget.ConstraintLayout>